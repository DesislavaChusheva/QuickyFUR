@page
@model RegisterDesignerCompleteModel
@{
    ViewData["Title"] = "Register Designer Complete";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Complete your account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Country" class="form-control" autocomplete="country" aria-required="true" />
                <label asp-for="Input.Country"></label>
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Age" class="form-control" autocomplete="age" aria-required="true" />
                <label asp-for="Input.Age"></label>
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <textarea asp-for="Input.Autobiography" class="form-control" rows="10"  autocomplete="autobiography" aria-required="true"></textarea>
                <label asp-for="Input.Autobiography"></label>
                <span asp-validation-for="Input.Autobiography" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Complete</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

