@using Microsoft.AspNetCore.Identity
@using QuickyFUR.Core.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model RemoveProductFromCartViewModel

@{
    Layout = "_Layout";
}
@Html.AntiForgeryToken()  

<div class="row">
    <div class="col-md-4">
        <form id="editProductForm" method="post">
            <h2>Do you want to remove @Model.Name?</h2>
            <hr />
            <button type="submit" formmethod="post" class="w-100 btn btn-lg btn-primary" asp-area="Identity" asp-controller="Customer" asp-action="RemoveProductPost" asp-route-productId="@Model.ProductId">Remove!</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}



