@using Microsoft.AspNetCore.Identity
@using QuickyFUR.Core.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model EditCustomerProfileViewModel

@{
    Layout = "_Layout";
}
@Html.AntiForgeryToken()

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" method="post">
            <h2>Complete your account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model.Address" class="form-control" autocomplete="country" aria-required="true" />
                <label asp-for="@Model.Address"></label>
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
            <button type="submit" formmethod="post" class="w-100 btn btn-lg btn-primary" asp-area="Identity" asp-controller="Customer" asp-action="CustomerAdditionalPost">Edit Profile</button>
        </form>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}



