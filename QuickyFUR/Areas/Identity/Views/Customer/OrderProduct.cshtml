@using Microsoft.AspNetCore.Identity
@using QuickyFUR.Core.Models
@model OrderProductViewModel
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    @addTagHelper *, AuthoringTagHelpers
@{
    Layout = "_Layout";
}
<h1>Order product</h1>

<div class="row">
    <img src="@Model.ImageLink" class="w3-round" alt="Norway">
    <div class="col-md-4">
        <b>Product name: </b>
        <p>@Model.Name</p>
    </div>
    <div class="col-md-4">
        <b>Designer name: </b>
        <p>@Model.DesignerName</p>
    </div>
    <div class="col-md-4">
        <b>Category: </b>
        <p>@Model.Category</p>
    </div>
    <div class="col-md-4">
        <b>Product description: </b>
        <p>@Model.Descritpion</p>
    </div>
    <a href="@Model.ConfiguratorLink" target="_blank">Configurator</a>
    <a asp-area="Identity" asp-controller="Customer" asp-action="MoreAboutDesigner">More about @Model.DesignerName</a>
    <form>
        <div class="form-group">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Configurated product file here!</label>
                <a asp-area="Identity" asp-controller="Customer" asp-action="AddToCart">Add to cart</a>
            </div>
        </div>
    </form>
</div>