@using Microsoft.AspNetCore.Identity
@using QuickyFUR.Core.Models

    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    @addTagHelper *, AuthoringTagHelpers
    @model DesignerInfoViewModel
@{
    Layout = "_Layout";
}

<h1>@Model.FullName</h1>


<div class="row">
    <div class="col-md-4">
        <b>Country: </b>
        <p>@Model.Country</p>
    </div>
    <div class="col-md-4">
        <b>Age: </b>
        <p>@Model.Age</p>
    </div>
    <div class="col-md-4">
        <b>Autobiography: </b>
        <p>@Model.Autobiography</p>
    </div>
    <h2>Products</h2>   
    @foreach (var p in Model.Products)
    {
        <div class="row">
            <img src="@p.ImageLink" class="w3-round" alt="Norway">
            <div class="col-md-4">
                <b>Product name: </b>
                <p>@p.Name</p>
            </div>
            <div class="col-md-4">
                <b>Category: </b>
                <p>@p.Category</p>
            </div>
            <div class="col-md-4">
                <b>Product description: </b>
                <p>@p.Descritpion</p>
            </div>
            <a href="@p.ConfiguratorLink" target="_blank">Configurator</a>
            <a asp-area="Identity" asp-controller="Customer" asp-action="OrderProduct" asp-route-productId="@p.ProductId">Order</a>
        </div>
    }
</div>

