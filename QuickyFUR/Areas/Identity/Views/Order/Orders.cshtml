@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Rendering;
@using QuickyFUR.Core.Models
@using (Html.BeginForm())

    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers




    @addTagHelper *, AuthoringTagHelpers
    @model IEnumerable<OrderPageViewModel>
@{
        Layout = "_Layout";
}

<h1>Orders</h1>

@if (Model.FirstOrDefault() == null)
{
    <h2>No orders!</h2>
}
else
{
    @foreach (var m in Model)
    {
        <div class="row">
            <div class="col-md-4">
                <b>Customer name: </b>
                <b>@m.DorCSide</b>
            </div>
            @foreach (var p in m.Products)
            {
                <ul>

                    <li>
                        <p>Product: @p.Name / Dimensions: @p.Dimensions / Additions: @p.Additions / Materials: @p.Materials / Price: @p.Price</p>
                    </li>

                </ul>
                <br />
                <br />
            }
        </div>
        <br />
        <br />
    }
}

