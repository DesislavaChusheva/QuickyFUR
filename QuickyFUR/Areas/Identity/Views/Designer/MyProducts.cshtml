@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Rendering;
@using QuickyFUR.Core.Models
@using (Html.BeginForm())

    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    @addTagHelper *, AuthoringTagHelpers
    @model IEnumerable<AllProductsViewModel>
@{
        Layout = "_Layout";
}

<h1>My products</h1>

@if (Model.FirstOrDefault() == null)
{
    <h2>No products!</h2>
}
else
{
    @foreach (var m in Model)
    {
        <div class="row">
            <img src="@m.ImageLink" class="w3-round" alt="Norway">
            <div class="col-md-4">
                <b>Product name</b>
                <p>"@m.Name"</p>
            </div>
            <div class="col-md-4">
                <b>Product Category</b>
                <p>"@m.Category"</p>
            </div>
            <div class="col-md-4">
                <b>Designer name</b>
                <p>"@m.DesignerName"</p>
            </div>
            <div class="col-md-4">
                <b>Product description</b>
                <p>"@m.Descritpion"</p>
            </div>
            <a href="@m.ConfiguratorLink" target="_blank">Configurator</a>
            <a asp-area="Identity" asp-controller="Designer" asp-action="EditProduct" asp-route-productId="@m.ProdcuctId">Edit</a>
            <a asp-area="Identity" asp-controller="Designer" asp-action="DeleteProduct" asp-route-productId="@m.ProdcuctId">Delete</a>
        </div>
    }
}

