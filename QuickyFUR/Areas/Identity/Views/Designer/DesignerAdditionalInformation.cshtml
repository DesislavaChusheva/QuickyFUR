@using Microsoft.AspNetCore.Identity
@using QuickyFUR.Core.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model EditDesignerProfileViewModel

@{
    Layout = "_Layout";
}
@Html.AntiForgeryToken()

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" method="post">
            <h2>Complete your account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model.Country" class="form-control" autocomplete="country" aria-required="true" />
                <label asp-for="@Model.Country"></label>
                <span asp-validation-for="@Model.Country" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.Age" class="form-control" autocomplete="age" aria-required="true" />
                <label asp-for="@Model.Age"></label>
                <span asp-validation-for="@Model.Age" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <textarea asp-for="@Model.Autobiography" class="form-control" rows="10" autocomplete="autobiography" aria-required="true"></textarea>
                <label asp-for="@Model.Autobiography"></label>
                <span asp-validation-for="@Model.Autobiography" class="text-danger"></span>
            </div>
            <button type="submit" formmethod="post" class="w-100 btn btn-lg btn-primary" asp-area="Identity" asp-controller="Designer" asp-action="DesignerAdditionalPost">Edit Profile</button>
        </form>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}



